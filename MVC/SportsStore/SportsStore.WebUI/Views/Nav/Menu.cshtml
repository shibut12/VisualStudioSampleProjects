@model IEnumerable<string>


<div class="list-group">
    
    @Html.RouteLink("Home", new {controller = "Product", action = "List", page=1}, htmlAttributes: new {@class="list-group-item"})

    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new {controller = "Product", action = "List", category = link, page = 1}, htmlAttributes: new {@class = link ==ViewBag.SelectedCategory? "list-group-item active" : "list-group-item" })
    }
</div>
